<UserControl x:Class="ToDoList.View.TaskPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoList.View"
             mc:Ignorable="d" 
             Height="500" Width="800">
    <Grid Background="{StaticResource BackgroundPrimaryBrush}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="10"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">

            <Label Width="Auto"
                   Foreground="{StaticResource TextForegroundBrush}"
                   FontSize="42"
                   FontWeight="Bold"
                   FontFamily="Verdana"
                   Content="ToDo">

            </Label>

            <Button Margin="470,0,0,0"
                    Style="{StaticResource ButtonStyle-Orange}"
                    Content="+Add"
                    Command="{Binding AddTaskCommand}"
                    >
                    
            </Button>

            <Button Style="{StaticResource ButtonStyle-Orange}" 
                    Content="-Remove"
                    Command="{Binding RemoveTaskCommand}">
                
            </Button>

        </StackPanel>

        <Rectangle Grid.Row="1" 
                   Fill="{StaticResource BackgroundOverlayBrush}">

        </Rectangle>

        <TextBox  Grid.Row="0"
                  Width="390"
                  Height="50"
                  Background="Transparent"
                  BorderThickness="2"
                  BorderBrush="{StaticResource TextForegroundBrush}"
                  VerticalContentAlignment="Center"
                  FontSize="24"
                  Text="{Binding NewTask}">
            
        </TextBox>

        <Rectangle Grid.Row="2" 
                   Fill="{StaticResource BackgroundSecondaryBrush}">

        </Rectangle>

        <ListView Grid.Row="2" ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBlock FontSize="24"
                                   TextDecorations="{Binding StrikeTextDecoration}"
                                   Text="{Binding Description}">
                            
                        </TextBlock>

                        <CheckBox HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  BorderBrush="{StaticResource ButtonPrimaryBrush}"
                                  IsChecked="{Binding IsDone}"
                                  Command="{Binding SetDoneCommand}">
                            
                        </CheckBox>
                        
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>


    
    
</UserControl>
